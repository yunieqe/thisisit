# Database
DATABASE_URL=postgresql://localhost:5432/escashop

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# SMS Configuration - Choose ONE provider:

# Option 1: Twilio (Popular, reliable)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_FROM=EscaShop

# Option 2: Clicksend (Philippines-friendly)
# SMS_PROVIDER=clicksend
# CLICKSEND_USERNAME=your_clicksend_username
# CLICKSEND_API_KEY=your_clicksend_api_key
# SMS_FROM=EscaShop

# Option 3: Vonage (formerly Nexmo)
# SMS_PROVIDER=vonage
# VONAGE_API_KEY=your_vonage_api_key
# VONAGE_API_SECRET=your_vonage_api_secret
# SMS_FROM=EscaShop

# Option 4: Generic SMS API
# SMS_PROVIDER=generic
# SMS_API_URL=https://api.yoursmsservice.com/send
# SMS_API_KEY=your_api_key
# SMS_FROM=EscaShop

# Development Mode (logs SMS to console instead of sending)
NODE_ENV=development
