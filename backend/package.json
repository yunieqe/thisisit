{
  "name": "backend",
  "version": "1.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:prod": "npx tsc -p tsconfig.prod.json",
    "dev": "nodemon src/index.ts",
    "start": "npm run migrate && node dist/index.js",
    "start:staging": "npm run build:prod && npm run migrate && node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration:local": "jest --testPathPattern=integration",
    "migrate": "node dist/migrate.js",
    "migrate:dev": "npx ts-node src/migrate.ts",
    "test:scheduler": "npx ts-node src/scripts/test-scheduler.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:security": "eslint src --config eslint.config.js",
    "security:check": "npm audit && npm run lint:security",
    "fix-admin-password": "node fix-admin-password-production.js",
    "fix-admin-panel": "node fix-admin-panel-production.js",
    "diagnose-email": "node diagnose-email-config.js"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.1.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.2",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@vonage/server-sdk": "^3.22.0",
    "argon2": "^0.43.1",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.1",
    "escashop-queue-system": "file:..",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.0",
    "jspdf": "^3.0.1",
    "moment-timezone": "^0.6.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.6.7",
    "nodemailer": "^7.0.5",
    "otplib": "^12.0.1",
    "pg": "^8.7.1",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^30.0.0",
    "@types/jspdf": "^1.3.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.31.0",
    "eslint-plugin-security": "^3.0.1",
    "ioredis": "^5.6.1",
    "jest": "^30.0.4",
    "nodemon": "^3.0.1",
    "rate-limit-redis": "^4.2.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0"
  }
}
